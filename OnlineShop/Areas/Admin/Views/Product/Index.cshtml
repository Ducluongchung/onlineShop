@model PagedList.IPagedList<Models.EF.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section trangchu{
    Danh sách sản phẩm
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Thông tin sản phẩm
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="table-responsive">
                    <button type="button" class="btn btn-default" style="float:right">@Html.ActionLink("Thêm mới", "Create")</button>
                    <br />
                    <br />
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Tên sản phẩm</th>
                                <th>Tên thay thế</th>
                                <th>Hình ảnh</th>
                                <th>Danh mục</th>
                                <th>Giá</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
            {
                <tr style="margin:auto;">
                    <td>
                        <a href="/Admin/Product/Edit/@item.ID">Sửa</a>
                        |
                        <a href="/Admin/Product/Delete/@item.ID">Xóa</a>
                    </td>
                    <td>@item.Name</td>
                    <td>@item.MetaTitle</td>
                    <td><img src="@item.Image" style="height:50px;" /></td>
                    <td>@item.CategoryID</td>
                    <td>@item.Price</td>
                    <td>@item.Status</td>
                </tr>

}

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>

</div>